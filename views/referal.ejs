<!DOCTYPE html>
<html lang="en-US">
    <head>
        <% include partials/head.ejs%>
        <style>
            .profile{
                background-color: #fff;
                padding: 50px 30px;
                text-align: center;
                border: 1px solid #d2d3d4;
            }
            .profile .user-image img{
                width: 100px;
                height:100px;
                border-radius: 50%;
                margin-bottom: 20px;
            }
            .user-name{
                margin-bottom: 20px;
                font-size: 20px;
            }
        </style>
    </head>
    <body>
        <% include partials/header.ejs%>
        <div class="section contact-us">
            <div class="container">
                <div class="row">
                    <% var messages = getMessages() %>
                    <div class="col-12 col-md-4">
                        <div class="profile">
                            <div class="user-image">
                                <img src="http://cloudstrading.com/wp-content/uploads/2019/04/test.jpg" alt="User image"/>
                            </div>
                            <h4 class="user-name">Defy Support </h4>
                            <h6><a href="#" class="link">hello@defyinsurance.com</a></h6>
                            <h6><a href="#" class="link">877-780-4626</a></h6>
                        </div>	
                    </div>
                    <div class="col-12 col-md-8">
                        <% if (messages.error_message){ %>
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <%= messages.error_message %>
                        </div>
                        <% } %>
                        <% if (messages.success_message){ %>
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <%= messages.success_message %>
                        </div>
                        <% } %>
                        <form id="referalForm" action="" method="post">
                            <div class="quote-form">
                                <div class="section-header">
                                    <h2 class="section-title">Tell Us About You</h2>
                                </div>
                                <div class="form mt-4">
                                    <div class="form-innner row">
                                        <div class="form-field text-left col-12 col-md-6">
                                            <div class="form-field__control">
                                                <label class="form-field__label">First Name</label>
                                                <input  type="text" name="sender_first_name" id="sender_first_name" class="form-field__input" />
                                            </div>
                                        </div>
                                        <div class="form-field text-left col-12 col-md-6">
                                            <div class="form-field__control">
                                                <label class="form-field__label">Last Name</label>
                                                <input type="text" name="sender_last_name" id="sender_last_name" class="form-field__input" />
                                            </div>
                                        </div>
                                        <div class="form-field text-left col-12 col-md-6">
                                            <div class="form-field__control">
                                                <label class="form-field__label">Email</label>
                                                <input type="email" name="sender_email" id="sender_email" class="form-field__input" />
                                            </div>
                                        </div>
                                        <div class="form-field text-left col-12 col-md-6">
                                            <div class="form-field__control">
                                                <label class="form-field__label">Phone Number</label>
                                                <input type="number" name="sender_phone_no" id="sender_phone_no" class="form-field__input" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="quote-form mt-5">
                                <div class="section-header">
                                    <h2 class="section-title">Refer Your Friends or Family Members</h2>
                                </div>
                                <input type="hidden" name="no_of_referal_person" id="no_of_referal_person" value="1" class="form-field__input" />
                                <div class="form mt-4 refferal-form-wrapper">
                                    <div class="refferal-form-inner">
                                        <div class="form-innner row refferal-form">
                                            <div class="form-field text-left col-12 col-md-6">
                                                <div class="form-field__control">
                                                    <label class="form-field__label">First Name</label>
                                                    <input type="text" name="referal_first_name[]" id="referal_first_name1" class="form-field__input" />
                                                </div>
                                            </div>
                                            <div class="form-field text-left col-12 col-md-6">
                                                <div class="form-field__control">
                                                    <label  class="form-field__label">Last Name</label>
                                                    <input type="text" name="referal_last_name[]" id="referal_last_name1" class="form-field__input" />
                                                </div>
                                            </div>
                                            <div class="form-field text-left col-12 col-md-6">
                                                <div class="form-field__control">
                                                    <label class="form-field__label">Email</label>
                                                    <input type="email" name="referal_email[]" id="referal_email1" class="form-field__input" />
                                                </div>
                                            </div>
                                            <div class="form-field text-left col-12 col-md-6">
                                                <div class="form-field__control">
                                                    <label class="form-field__label">Phone Number</label>
                                                    <input type="number" name="referal_phone_no[]" id="referal_phone_no1" class="form-field__input" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="add-another-referal my-4">
                                    <button class="btn btn-primary btn-sm" type="button">+ Add Another Referral</button>
                                </div>

                                <div class="btn-wrapper text-right">
                                    <button type="button" class="btn btn-primary" onClick="validateReferalForm();">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer Ends -->
        <% include partials/footer.ejs%>
        <script>
        $(document).ready(function () {
            $('.add-another-referal .btn').click(function () {
                var no_of_referal_person = parseInt($('#no_of_referal_person').val());
                if (no_of_referal_person >= 10) {
                    alert("You can add maximum 10 referal");
                } else {
                    var fname = $("#referal_first_name" + no_of_referal_person).val();
                    var lname = $("#referal_last_name" + no_of_referal_person).val();
                    var email = $("#referal_email" + no_of_referal_person).val();
                    var phone_no = $("#referal_phone_no" + no_of_referal_person).val();
                    if (fname == '' || lname == '' || email == '' || phone_no == '') {
                        alert("Please fill all fields");
                    } else {
                        no_of_referal_person = no_of_referal_person + 1;
                        var refferalForm = '<div class="refferal-form-inner">' +
                                '<div class="form-innner row refferal-form">' +
                                '<div class="form-field text-left col-12 col-md-6">' +
                                '<div class="form-field__control">' +
                                '<label class="form-field__label">First Name</label>' +
                                '<input type="text" name="referal_first_name[]" id="referal_first_name' + no_of_referal_person + '" class="form-field__input" />' +
                                '</div>' +
                                '</div>' +
                                '<div class="form-field text-left col-12 col-md-6">' +
                                '<div class="form-field__control">' +
                                '<label  class="form-field__label">Last Name</label>' +
                                '<input type="text" name="referal_last_name[]" id="referal_last_name' + no_of_referal_person + '" class="form-field__input" />' +
                                '</div>' +
                                '</div>' +
                                '<div class="form-field text-left col-12 col-md-6">' +
                                '<div class="form-field__control">' +
                                '<label class="form-field__label">Email</label>' +
                                '<input type="email" name="referal_email[]" id="referal_email' + no_of_referal_person + '" class="form-field__input" />' +
                                '</div>' +
                                '</div>' +
                                '<div class="form-field text-left col-12 col-md-6">' +
                                '<div class="form-field__control">' +
                                '<label class="form-field__label">Phone Number</label>' +
                                '<input type="number" name="referal_phone_no[]" id="referal_phone_no' + no_of_referal_person + '" class="form-field__input" />' +
                                '</div>' +
                                '</div></div></div>';
                        $('.refferal-form-wrapper').append(refferalForm);
                        $('#no_of_referal_person').val(no_of_referal_person);

                    }
                }
            });
        });
        </script>
    </body>
</html>