<!DOCTYPE html>
<html lang="en">
    <head>
        <% include partials/head.ejs%>
        <style>
            .banner {
                min-height: 500px;
                display: flex;
                align-items: center;
                justify-content: center;
            }
        </style>
    </head>
    <body>
        <% include partials/header.ejs%>
        <section class="banner inner-page">
            <div class="banner-content">
                <div class="banner-inner">
                    <div class="typed_wrap">
                        <h1 class="banner-title">CONTACT US</h1>
                        <h4 class="subtitle">Home / Contact</h4>
                    </div>
                </div>
            </div>
        </section>

        <div class="svg-wrapper bg-white">
            <svg version="1.1" id="Layer_1" class="footer-top" x="0px" y="0px" width="1920px" height="58.223px" viewBox="0 0 1920 58.223" enable-background="new 0 0 1920 58.223" xml:space="preserve"><path fill="#f9f8f4" d="M1920,233.223H0C0,233.223,1600.488,364.223,1920,233.223z"/><path fill="#f9f8f4" d="M0,58.223h1920C1920,58.223,319.512-72.777,0,58.223z"/></svg>
        </div>

        <div class="section contact-us">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12  col-md-8">
                        <div class="section-header text-center">
                            <h2 class="section-title">Send Us a Message</h2>
                            <p class="mt-4">Defy Insurance is committed to providing you with the best customer service to meet your insurance needs. Have a question about your policy? Checking on a claim? Have you been in an accident? We're here to help. Call us at <a href="tel:877-780-4626">877-780-4626</a>. Or fill out the form below and we'll contact you shortly.</p>
                        </div>
                    </div>
                    <div class="col-12 col-md-8 mt-5">
                        <% var messages = getMessages() %>
                        <form method="post" action="" id="contactUsForm">
                            <% if (messages.error_message){ %>
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <%= messages.error_message %>
                            </div>
                            <% } %>
                            <% if (messages.success_message){ %>
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                <%= messages.success_message %>
                            </div>
                            <% } %>
                            <div class="quote-form">
                                <div class="form-innner">
                                    <div class="row">
                                        <div class="col-12 col-md-6">
                                            <div class="form-field text-left">
                                                <div class="form-field__control">
                                                    <label class="form-field__label">Products of Interest</label>
                                                    <input type="text" class="form-field__input" name="product_of_interest" id="product_of_interest" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-field text-left">
                                                <div class="form-field__control">
                                                    <label class="form-field__label">First Name</label>
                                                    <input type="text" class="form-field__input" name="first_name" id="first_name" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-field text-left">
                                                <div class="form-field__control">
                                                    <label class="form-field__label">Last Name*</label>
                                                    <input type="text" class="form-field__input"  name="last_name" id="last_name" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-field text-left">
                                                <div class="form-field__control">
                                                    <label class="form-field__label">Phone</label>
                                                    <input type="number" min="0" class="form-field__input" name="phone_number" id="phone_number" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="dropdown-select-wrap">
                                                <div class="dropdown-select dropdown">
                                                    <span aria-haspopup="true" aria-expanded="false" tabindex="-1" class="dropdown-select-header completed">
                                                        <label class="dropdown-label" for="yearYear-0Input-0">Best Time to Call</label>
                                                        <input id="timeList_input" data-cy="year-0Input" type="text" name="time_preference" class="form-control completed" placeholder="Best Time to Call" value="">
                                                        <svg class="" xmlns="http://www.w3.org/2000/svg" width="11.67" height="6.04" viewBox="0 0 11.67 6.04">
                                                        <polygon points="5.89 6.04 0 0.74 0.67 0 5.88 4.69 11 0 11.67 0.74 5.89 6.04" fill="#fff"></polygon>
                                                        </svg>
                                                    </span>
                                                    <div tabindex="-1" role="menu" aria-hidden="true" class="dropdown-menu" id="timeList">
                                                        <div class="item">No Preference</div>
                                                        <div class="item">Daytime</div>
                                                        <div class="item">Morning</div>
                                                        <div class="item">Afteroon</div>
                                                        <div class="item">Evening</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-6">
                                            <div class="form-field text-left">
                                                <div class="form-field__control">
                                                    <label class="form-field__label">Email Address*</label>
                                                    <input type="email" class="form-field__input" id="email" name="email" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12 col-md-12">
                                            <div class="form-field">
                                                <div class="form-field__control">
                                                    <label class="form-field__label">Message (optional)</label>
                                                    <textarea class="form-field__textarea" name="message" id="message"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="btn-wrapper col-12">
                                            <button type="button" id="contact_sub_btn" onClick="validateContactForm();" class="btn btn-primary">Request a Quote</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="svg-wrapper bg-white">
            <svg x="0px" y="0px" width="1920px" height="58.223px" viewBox="0 0 1920 58.223"><path fill="#f9f8f4" d="M1920,0H0C0,0,1600.488,131,1920,0z"/><path fill="#574bf6" d="M0-175h1920C1920-175,319.512-306,0-175z"/></svg>
        </div>

        <div class="section contact-us bg-white">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md map">
                        <div class="section-header">
                            <h2 class="section-title">Reach Us</h2>
                            <p>Reach Us on Below Address</p>
                        </div>  
                        <div class="mapouter">
                            <div class="gmap_canvas">
                                <iframe width="100%" height="500" id="gmap_canvas" src="https://maps.google.com/maps?q=116%20Village%20Blvd%2C%20Ste%20200%20Princeton%2C%20NJ%2008540&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-auto">
                        <div style="width: 2px;margin: 0 10px; min-height: 100%;background-color: #0a0c0e; ">

                        </div>
                    </div>
                    <div class="col-12 col-md">
                        <div class="quote-form">
                            <div class="section-header">
                                <h2 class="section-title">Just Make a Call</h2>
                                <p>Want to Discuss Something</p>
                            </div>
                            <div class="contact-details p-4 bg-light border-0">
                                <div class="contact-links">
                                    <span class="conatct-icon">
                                        <img src="/web_assets/assets/icons/web/ic_call.png" width="30"/>
                                        Phone
                                    </span>
                                    <a href="tel:732-333-6821">877-780-4626</a>
                                </div>
                                <div class="contact-links">
                                    <span class="conatct-icon">
                                        <img src="/web_assets/assets/icons/web/ic_call.png" width="30"/>
                                        Toll Free
                                    </span>
                                    <a href="tel:877-780-4626">NY Office: (516) 376-2018</a>
                                </div>
                                <!--div class="contact-links">
                                    <span class="conatct-icon">
                                        <img src="/web_assets/assets/icons/web/fax.svg" width="30"/>
                                        Fax
                                    </span>
                                    <a href="tel:732-453-5244">732-453-5244</a>
                                </div-->
                                <div class="contact-links">
                                    <span class="conatct-icon">
                                        <img src="/web_assets/assets/icons/web/clock-fill.svg" width="30"/>
                                        Office Hours:
                                    </span>
                                    <span>
                                        Monday - Friday: 9:00 AM - 6:00 PM<br>
                                        Sat: Closed<br>
                                        Sun: Closed    
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% include partials/footer.ejs%>
    </body>
</html>