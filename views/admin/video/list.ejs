<!DOCTYPE html>
<html lang="en">
    <% include ../partials/head.ejs %>
    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <% include ../partials/header.ejs %>
            <% include ../partials/sidebar.ejs %>
            <!-- Content Wrapper. Contains page content -->
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="m-0 text-dark">Videos</h1>
                            </div><!-- /.col -->
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item">
                                        <a href="/admin/dashboard">
                                            <i class="fa fa-tachometer-alt"></i> Dashboard
                                        </a>
                                    </li>
                                    <li class="breadcrumb-item active">Videos</li>
                                </ol>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    </div><!-- /.container-fluid -->
                </div>
                <!-- /.content-header -->

                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Videos</h3>
                                        <a title="Add Video" href="/admin/video/add" class="btn btn-info btn-sm float-right">Add Video</a>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body">
                                        <% var messages = getMessages()
                                            if (messages.error_message){ %>
                                                <div class="alert alert-danger alert-dismissible">
                                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                    <%= messages.error_message %>
                                                </div>
                                        <% } if (messages.success_message){ %>
                                                <div class="alert alert-success alert-dismissible">
                                                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                    <%= messages.success_message %>
                                                </div>
                                        <% } %>
                                        <table id="videos_list" class="table table-bordered table-striped dt-responsive nowrap">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Type</th>
                                                    <th>Title</th>
                                                    <th>Description</th>
                                                    <th>Video</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% result.forEach(function(res, i) { 
                                                if(res.type == 1)
                                                    var v_type = "Auto";
                                                if(res.type == 2)
                                                    var v_type = "Home";
                                                if(res.type == 3)
                                                    var v_type = "Business";
                                                if(res.type == 4)
                                                    var v_type = "Work Compensation";
                                                if(res.type == 5)
                                                    var v_type = "Renters";
                                                if(res.type == 6)
                                                    var v_type = "Home Insurance Floater";
                                                if(res.type == 7)
                                                    var v_type = "Motorcycle, RV, Boat";
                                                if(res.type == 8)
                                                    var v_type = "Umbrella";
                                                if(res.type == 9)
                                                    var v_type = "Small Group Benefits";
                                                if(res.type == 10)
                                                    var v_type = "Life";
                                                if(res.type == 11)
                                                    var v_type = "Health care";
                                                if(res.type == 12)
                                                    var v_type = "Accident";
                                                if(res.type == 13)
                                                    var v_type = "Dental";
                                                if(res.type == 14)
                                                    var v_type = "Short-Term Medical";
                                                if(res.type == 15)
                                                    var v_type = "Vision";
                                                if(res.type == 16)
                                                    var v_type = "Medicare";
                                                if(res.type == 17)
                                                    var v_type = "ThanK You";
                                                if(res.type == 18)
                                                    var v_type = "Homepage";
                                                if(res.type == 19)
                                                    var v_type = "About Us";
                                                if(res.type == 20)
                                                    var v_type = "Why Defy";

                                                %>
                                                    <tr>
                                                        <td><%= i+1 %></td>
                                                        <td><%= v_type %></td>
                                                        <td><%= res.title %></td>
                                                        <td><%= (res.description) ? res.description : 'N/A' %></td>
                                                        <td>
                                                            <a href="<%= res.url %>" target="_blank">
                                                                <img src="<%= res.thumbnail %>" width="60px" height="60px">
                                                            </a>
                                                        </td>
                                                        <td>
                                                            <a title="Delete" href="/admin/video/delete/<%= res.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this video?');">
                                                                <i class="fas fa-trash">
                                                                </i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->

                    </div><!--/. container-fluid -->
                </section>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
            <!-- /.content-wrapper -->
            <% include ../partials/footer.ejs %>
    </body>
</html>   
