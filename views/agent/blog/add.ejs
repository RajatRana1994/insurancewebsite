<!DOCTYPE html>
<html lang="en">
<% include ../partials/head.ejs %>

    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <% include ../partials/header.ejs %>
                <% include ../partials/sidebar.ejs %>
                    <!-- Content Wrapper. Contains page content -->
                    <!-- Content Wrapper. Contains page content -->
                    <div class="content-wrapper">
                        <!-- Content Header (Page header) -->
                        <div class="content-header">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">
                                        <h1 class="m-0 text-dark">Blogs</h1>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-sm-6">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item">
                                                <a href="/admin/dashboard">
                                                    <i class="fa fa-tachometer-alt"></i> Dashboard
                                                </a>
                                            </li>
                                            <li class="breadcrumb-item active">Blogs</li>
                                        </ol>
                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                            </div>
                            <!-- /.container-fluid -->
                        </div>
                        <!-- /.content-header -->

                        <!-- Main content -->
                        <section class="content">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-12">
                                        <% var messages = getMessages()
                                if (messages.error_message){ %>
                                            <div class="alert alert-danger alert-dismissible">
                                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                <%= messages.error_message %>
                                            </div>
                                            <% } %>
                                                <div class="card card-primary">
                                                    <div class="card-header">
                                                        <h3 class="card-title">Add Blog</h3>
                                                    </div>
                                                    <!-- /.card-header -->
                                                    <form role="form" action="" method="post" id="" enctype="multipart/form-data">
                                                        <div class="card-body">
                                                            <div class="form-group">
                                                                <label for="name">Blog Type</label>
                                                                <select class="form-control" id="blog_type" name="blog_type" required="">
                                                                    <option value="">Choose Blog Type</option>
                                                                    <option value="1">Auto</option>
                                                                    <option value="2">Home</option>
                                                                    <option value="3">Business</option>
                                                                    <option value="4">Work Compensation</option>
                                                                    <option value="5">Renters</option>
                                                                    <option value="6">Home Insurance Floater</option>
                                                                    <option value="7">Motorcycle, RV, Boat</option>
                                                                    <option value="8">Umbrella</option>
                                                                    <option value="9">Small Group Benefits</option>
                                                                    <option value="10">Life</option>
                                                                    <option value="11">Health care</option>
                                                                    <option value="12">Accident</option>
                                                                    <option value="13">Dental</option>
                                                                    <option value="14">Short-Term Medical</option>
                                                                    <option value="15">Vision</option>
                                                                    <option value="16">Medicare</option>
                                                                    <option value="17">Medical</option>
                                                                    <option value="18">Commercial Auto</option>
                                                                    <option value="19">General Liability</option>
                                                                    <option value="20">Professional Liability</option>
                                                                    <option value="21">Cyber Insurance</option>
                                                                    <option value="22">Surety Bonds</option>
                                                                </select>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="name">Title</label>
                                                                <input type="text" class="form-control" id="title" placeholder="Enter Title" name="title" value="" required="">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="name">Duration</label>
                                                                <input type="text" class="form-control" id="duration" placeholder="Enter Duration" name="duration" value="" required="">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="name">Short Description</label>
                                                                <textarea class="form-control" id="short_description" placeholder="Enter Short Description" name="short_description" required=""></textarea>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="name">Description</label>
                                                                <textarea class="form-control" id="description" placeholder="Enter Description" name="description" required=""></textarea>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="name">Image 1</label>
                                                                <input type="file" id="image1" name="image[]" accept="image/*" required="">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="name">Image 2</label>
                                                                <input type="file" id="image2" name="image[]" accept="image/*">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="name">Image 3</label>
                                                                <input type="file" id="image3" name="image[]" accept="image/*">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="name">Image 4</label>
                                                                <input type="file" id="image4" name="image[]" accept="image/*">
                                                            </div>
                                                        </div>
                                                        <!-- /.card-body -->

                                                        <div class="card-footer">
                                                            <input type="submit" name="btn_sub" id="btn_sub" class="btn btn-primary" value="Add">
                                                        </div>
                                                    </form>
                                                </div>
                                    </div>
                                </div>
                                <!-- /.row -->

                            </div>
                            <!--/. container-fluid -->
                        </section>
                        <!-- /.content -->
                    </div>
                    <!-- /.content-wrapper -->
                    <!-- /.content-wrapper -->
                    <% include ../partials/footer.ejs %>
    </body>

</html>